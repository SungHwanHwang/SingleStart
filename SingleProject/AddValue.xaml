<Window x:Class="SingleProject.AddValue"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddValue" Height="300" Width="300">
    <Grid Background="AntiqueWhite">
        <TextBlock Name="receiveId"/>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock FontWeight="Black" Width="100"> 충전할 금액</TextBlock>
                <TextBox Width="150" Name="writeValue"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Width="100" Name="addMoney" Click="Add_Money">충전</Button>
                <Button Width="100" Name="closing" Click="closing_Click" Margin="50,0,0,0">종료</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
