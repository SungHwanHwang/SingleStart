<UserControl x:Class="SingleProject.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="525">
    <Grid Background="AntiqueWhite">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="10">  
                <TextBlock Width="100">ID</TextBlock>
                <TextBox Name ="userId" Width="150" Focusable="True"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Width="100">PASSWORD</TextBlock>
                <TextBox Name ="password" Width="150" Focusable="True"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Width="100" Name="btnLogin" Click="Login_Click">LOGIN</Button>
                <Button Width="100" Name="btnRegistration" Margin="50,0,0,0" Click="Register_Click">REGISTER</Button>
            </StackPanel>
        </StackPanel>
            
    </Grid>
</UserControl>
